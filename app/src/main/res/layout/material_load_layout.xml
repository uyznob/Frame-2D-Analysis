<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_dim"
    android:paddingRight="@dimen/padding_dim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rectImage"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/rectangle" />

            <ImageView
                android:id="@+id/circImage"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/circle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pipeImage"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/pipe" />

            <ImageView
                android:id="@+id/tubeImage"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/tube" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ibeamImage"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/ibeam" />

            <ImageView
                android:id="@+id/channelImage"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/channel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/doubleangleImage"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/doubleangle" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>